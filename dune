(alias
 (name runtest)
 (action
  (progn
   (run c64stitch -o hello.json --interline=2 "hello to this whole\nbeautiful world")
   (run c64stitch -t cyan -o border.json "\\")
   (run embellish_stitch --top=border.json --side=border.json --center=hello.json --corner=border.json -o embellished.json)
   (run stitchpattern -i embellished.json -o embellished.pdf)
   (run evince embellished.pdf)
  )
 )
)

(alias
 (name butt)
 (action
  (progn
   (run c64stitch -o butt.json "butt")
   (run c64stitch -o dash.json -- "-")
   (run embellish_stitch --corner=dash.json --side=dash.json --center=butt.json -o border_butt.json)
   (run notty_canvas border_butt.json)
)))

(alias
 (name be_gay_do_crimes)
 (action
  (progn
   (run c64stitch -o red.json -t red "2")
   (run c64stitch -o orange.json -t orange "3")
   (run c64stitch -o yellow.json -t yellow "5")
   (run c64stitch -o green.json -t green "7")
   (run c64stitch -o hblue.json -t blue "11")
   (run c64stitch -o hpurple.json -t purple "13")
   (run c64stitch -o black.json "\\")
   (run c64stitch -o vblueone.json -t blue "1")

   (run hcat -o vblueeleven.json vblueone.json vblueone.json)
   (run c64stitch -o vpurpleone.json -t purple "1")
   (run c64stitch -o vpurplethree.json -t purple "3")
   
   (run hcat -o vpurplethirteen.json vpurpleone.json vpurplethree.json)

   (run vcat -o vroygbv.json red.json orange.json yellow.json green.json hblue.json hpurple.json)

   (run hcat -o hroygbv.json red.json orange.json yellow.json green.json vblueeleven.json vpurplethirteen.json)

   (run c64stitch -o be.json "be")
   (run c64stitch -o gay.json "gay")
   (run c64stitch -o find.json "find")
   (run c64stitch -o primes.json "primes")

   (run hcat -o saying.json be.json gay.json find.json primes.json)
   (run embellish_stitch --top=vroygbv.json --side=hroygbv.json --corner=black.json --center=saying.json -o be_gay_find_primes.json)
   (run stitchpattern -i be_gay_find_primes.json -o be_gay_find_primes.pdf)
        )))

(alias
 (name holy_shit)
 (action
  (progn
   (run c64stitch -o holy.json     "holy        ")
   (run c64stitch -o rav.json      "  ravioli   ")
   (run c64stitch -o batman.json   "    veronica")
   (run hcat -o for_veronica.json holy.json rav.json batman.json)
   (run stitchpattern -i for_veronica.json -o for_veronica.pdf)
   (run evince for_veronica.pdf)
   )))
