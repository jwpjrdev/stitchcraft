(executable
 (public_name pattern)
 (libraries cmdliner camlpdf imagelib imagelib-unix)
)

(data_only_dirs test)

(alias
 (name runtest)
 (deps test/ocaml.png test/hecko.png)
 (action
  (progn
   (run pattern -p20 -o ocaml.pdf test/hecko.png)
   (run pdfinfo ocaml.pdf)
   (run evince ocaml.pdf)
)))
