(executable
 (public_name pngpattern)
 (modules pngpattern)
 (libraries pattern cmdliner camlpdf imagelib imagelib-unix)
)

(executable
 (public_name stitchpattern)
 (modules stitchpattern)
 (libraries pattern cmdliner camlpdf stitchy)
)

(data_only_dirs test)

(alias
 (name runtest)
 (deps test/ocaml.png test/hecko.png)
 (action
  (progn
   (run pngpattern -p20 -o ocaml.pdf test/hecko.png)
   (run pdfinfo ocaml.pdf)
   (run evince ocaml.pdf)
)))
