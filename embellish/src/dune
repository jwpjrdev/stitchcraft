(executable
 (public_name embellish)
 (libraries compose cmdliner imagelib imagelib-unix))

(data_only_dirs test)

(alias
 (name runtest)
 (deps test/corner.png test/side.png test/center.png)
 (action
   (progn
   (run embellish --corner test/corner.png --side test/side.png --center test/center.png --output embellished.png)
   (run identify embellished.png)
   (run eog embellished.png)
   )
 ))
